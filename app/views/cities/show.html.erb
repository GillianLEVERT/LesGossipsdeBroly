<div>
<h2 class="text-center"> Les Villes: <%= @city.name %></h2>
<p class="text-center font-italic">Code Postal: <%= @city.zip_code %></p>
</div>


<div class="row row-cols-1 row-cols-md-4 g-4 px-4">
  <% @gossips.each do |gossip| %>
    <div class="col p-5 d-flex justify-content-center">    
      <div class="card text-success bg-dark mb-3" style="width: 40rem; box-shadow: rgba(0, 0, 0, 0.1) -4px 9px 25px -6px; background-color: #f8f8f3">
      
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text">Auteur(e) : <%= gossip.user.first_name%></p>
          <p class="card-text">Commentaire(s) : <%= gossip.comments.length%>
          <p class="card-text">Contenu : <%= gossip.content%>
          
        </div>        
      </div>
    </div>
  <% end %>
</div>