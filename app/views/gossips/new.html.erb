<div>
<% begin %>
<% if @gossip.errors.any? %>
    <div class="alert alert-danger w-100" role="alert">
  <p>Ca marche pas, voici pourquoi :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
    PARCE QUE ! 
  </div>
<% end %>
<%rescue => e %>
<%end%>
</div>
<div class="d-flex align-items-center flex-column">
    <h1>Publiez votre potin ici :</h1>
    <p class="rules">Quelques règles:</p>
    <ul class="rules_list">
        <li>Titre obligatoire</li>
        <li>Titre entre 3 et 14 caractères</li>
        <li>Le contenu ne doit pas être vide</li>
    </ul>
    <div>
        <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
        <%= label_tag :Titre %>
    </div>
    <div class="form-group", style="width: 500px">
        <%= text_field_tag :title, "", class:"form-control" %>
        <br /> <br />
    </div>
    <div>
        <%= label_tag :Contenu %>
    </div>
    <div class="form-group", style="width: 500px">
        <%= text_area_tag :content, "", class:"form-control" %>
        <br /> <br />
    </div>
    <div>
        <%= submit_tag 'Publier', class:"btn btn-warning mb-5"%>
    </div>
        <% end %>
    </div>
</div>
<div>
</div>