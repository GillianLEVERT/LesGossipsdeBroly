<% begin %>
<% if @gossip.errors.any? %>
    <div class="alert alert-danger w-100" role="alert">
  <p>Ca marche pas, voici pourquoi :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  PARCE QUE ! 
  </div>
<% end %>
<%rescue => e %>
<%end%>
<div>
</div>
<div class="d-flex align-items-center flex-column">
  <h1>Modifiez votre potin ici :</h1>
  <p class="rules">Quelques règles:</p>
  <ul class="rules_list">
    <li>Titre obligatoire</li>
    <li>Titre entre 3 et 14 caractères</li>
    <li>Le contenu ne doit pas être vide</li>
  </ul>

  <%= form_for @gossip do |f| %>
    
    <div class="form-group", style="width: 500px">
      <label>Titre du potin</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group", style="width: 500px">
      <label>Contenu du potin</label>
      <%= f.text_area :content, class:"form-control"%>
    </div>

    <div class="form-group">
      <button type="submit", class= "btn btn-warning mb-5 mt-5" >Modifier le potin</button>
    </div>


  <% end %>

</div>
<div>
